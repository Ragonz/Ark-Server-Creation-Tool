<Window x:Name="btn_saveConfig" x:Class="ARKServerCreationTool.ServerConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARKServerCreationTool"
        mc:Ignorable="d"
        Title="ASCT - Server Configuration" Height="713" MinHeight="516" Width="520"  MinWidth="520" >
    <ScrollViewer>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*" MaxHeight="51" MinHeight="51"/>
            <RowDefinition Height="108*"/>
        </Grid.RowDefinitions>
        <Label Content="Server Configuration" HorizontalAlignment="Left" Margin="10,10,0,10" FontSize="16" Width="156"/>
        <Button x:Name="btn_save" Content="Save" Margin="0,10,10,10" Click="btn_save_Click" HorizontalAlignment="Right" Width="135"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="122" MaxWidth="162"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Server Name" Margin="10,0,0,5" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right" Grid.Row="1" />
            <TextBox x:Name="txt_serverName" ToolTip="Just a name used to identify the server within the tool" Grid.Column="1" Grid.Row="1" Margin="10,0,0,5" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <Label Content="Install Directory" Margin="10,0,0,5" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right" Grid.Row="2"/>
            <TextBox x:Name="txt_gameDir" Grid.Column="1" Grid.Row="2" Margin="10,0,86,5" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <Button x:Name="btn_browse" Grid.Column="1" Grid.Row="2" Content="Browse..." Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="71" Height="26" Click="btn_browse_Click"/>
            <Label Content="Map" Margin="10,0,0,5" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right" Grid.Row="3"/>
            <Button x:Name="btn_newMap" Grid.Column="1" Grid.Row="3" Content="New Map..." Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="104" Height="26" Click="btn_newMap_Click"/>
            <TextBox x:Name="txt_customMap" Grid.Column="1" Grid.Row="3" Margin="10,0,0,5" TextWrapping="Wrap"  VerticalAlignment="Top" Height="26" Visibility="Collapsed"  VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <ComboBox x:Name="cmbo_Map" Grid.Column="1" Grid.Row="3" Margin="10,0,119,0" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" SelectionChanged="comboSelectionChanged"/>
            <Label Content="Cluster ID" Margin="10,0,0,5" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right" Grid.Row="4"/>
            <ComboBox x:Name="cmbo_clusterKey" Grid.Column="1" Grid.Row="4" Margin="10,0,119,0" VerticalAlignment="Top" Height="26" SelectionChanged="comboSelectionChanged"/>
            <TextBox x:Name="txt_newClusterID" ToolTip="Enter a new cluster ID. This must be something unique amongst all ASA servers" Visibility="Collapsed" Grid.Column="1" Grid.Row="4" Margin="10,0,119,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <Button x:Name="btn_newCluster" Grid.Column="1" Grid.Row="4" Content="New Cluster..." Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="104" Height="26" Click="btn_newCluster_Click"/>
            <Label Content="Main Game Port" Margin="10,0,0,5" Grid.Row="6" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="txt_gamePort" Grid.Column="1" Grid.Row="6" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged" HorizontalAlignment="Left" Width="80" PreviewTextInput="txt_gamePort_PreviewTextInput"/>
            <Label Content="Launch Arguments" Grid.Row="14" Margin="10,0,0,10" HorizontalContentAlignment="Right" Height="63" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />
            <TextBox x:Name="txt_commandLine" IsEnabled="False" Grid.Column="1" Grid.Row="14" Margin="10,0,0,10" TextWrapping="WrapWithOverflow" VerticalContentAlignment="Center" FontSize="12" Height="63" VerticalAlignment="Bottom"/>
            <CheckBox x:Name="chkbx_overrideCommandline" Content="Manually define launch arguments" HorizontalAlignment="Left" Margin="10,5,0,78" Grid.Column="1" Grid.Row="14" Height="15" VerticalAlignment="Bottom" Click="chkbx_overrideCommandline_Click" Width="203"/>
            <Label x:Name="lbl_invalidPort" Grid.Column="1" Grid.Row="6" Content="⚠️ Invalid Value" HorizontalAlignment="Left" Margin="95,0,0,0" VerticalAlignment="Top" FontSize="10" Height="26" VerticalContentAlignment="Center" Width="82"/>
            <Label Content="Mods" Margin="10,74,0,5" Grid.Row="11" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <ListBox x:Name="lst_modIds" Grid.Column="1" Grid.Row="11" Margin="10,0,10,31" Height="174" SelectionMode="Multiple" SelectionChanged="lst_modIds_SelectionChanged"/>
            <TextBox x:Name="txt_addMod" Grid.Column="1" Grid.Row="11" Margin="10,0,119,0" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <Button x:Name="btn_addMod" Grid.Column="1" Grid.Row="11" Content="Add Mod" Margin="0,0,43,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="71" Height="26" Click="btn_addMod_Click"/>
            <Button x:Name="btn_removeMod" IsEnabled="False" ToolTip="Remove Selected Mod" Grid.Column="1" Grid.Row="11" Content="🗑️" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="28" Height="26" RenderTransformOrigin="0.494,1.346" Click="btn_removeMod_Click"/>
            <Label Content="Max Players" Margin="10,0,0,5" Grid.Row="7" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="txt_slots" Grid.Column="1" Grid.Row="7" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged" HorizontalAlignment="Left" Width="80" PreviewTextInput="txt_slot_PreviewTextInput"/>
            <Label x:Name="lbl_invalidSlots" Grid.Column="1" Grid.Row="7" Content="⚠️ Invalid Value" HorizontalAlignment="Left" Margin="95,0,0,0" VerticalAlignment="Top" FontSize="10" Height="26" VerticalContentAlignment="Center" Width="82"/>
            <CheckBox x:Name="chk_crossplay" Grid.Column="1" Grid.Row="8" Content="" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalContentAlignment="Center" Height="26" Click="chk_crossplay_Checked" VerticalAlignment="Top"/>
            <Label Content="Allow Crossplay" Grid.Row="8" Margin="10,0,0,5" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right"/>
            <CheckBox x:Name="chk_noBattleye" Grid.Column="1" Grid.Row="9" Content="" HorizontalAlignment="Left" Margin="10,0,0,7" VerticalContentAlignment="Center" Height="28" Click="chk_crossplay_Checked" VerticalAlignment="Top"/>
            <Label Content="No Battleye" Grid.Row="9" Margin="10,0,0,0" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right"/>
            <CheckBox x:Name="chk_useMultiHome" Grid.Column="1" Grid.Row="5" Content="" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalContentAlignment="Center" Height="28" Click="chk_useMultiHome_Checked" VerticalAlignment="Top"/>
            <Label Content="Specify IP address" Grid.Row="5" Margin="10,0,0,5" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="txt_multiHomeIPaddress" Grid.Column="1" Grid.Row="5" IsEnabled="False" Margin="35,0,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <Label Content="Active Event" Margin="10,0,0,26"  Grid.Row="10" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="txt_activeEvent" Grid.Column="1" Grid.Row="10" Margin="10,0,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <CheckBox x:Name="chk_automaticStart" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalContentAlignment="Center" Height="26" Click="chk_crossplay_Checked" VerticalAlignment="Top"/>
            <Label Content="Automatic Start" Margin="10,0,0,0" Grid.Row="0" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Right"/>
            <Label x:Name="lbl_allowAutoLaunchDisabled" Grid.Row="0" Grid.Column="1" Content="⚠️ Automatic start is currently disabled globally." HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top" FontSize="10" Height="26" VerticalContentAlignment="Center" Width="358"/>
            <Label Content="Arguments" Margin="10,0,0,10" Grid.Row="13" VerticalAlignment="Center"  HorizontalAlignment="Right"/>
            <ListBox x:Name="lst_UserLauncharguments" Grid.Row="13" Grid.Column="1" Margin="10,15,10,31"  Height="100" SelectionMode="Multiple" SelectionChanged="Lst_UserLauncharguments_OnSelectionChanged"/>
            <TextBox x:Name="txt_addUserLaunchArguments" Grid.Row="13" Grid.Column="1" Margin="10,0,119,0" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="26" VerticalContentAlignment="Center" FontSize="12" TextChanged="TextChanged"/>
            <Button x:Name="btn_addUserLaunchArguments" Grid.Row="13" Grid.Column="1" Content="Add Rule" Margin="0,0,43,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="71" Height="26" Click="Btn_addUserLaunchArguments_OnClick"/>
            <Button x:Name="btn_removeUserLaunchArguments" IsEnabled="False" ToolTip="Remove Selected argument" Grid.Row="13" Grid.Column="1" Content="🗑️" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="28" Height="26" RenderTransformOrigin="0.494,1.346" Click="Btn_removeUSerLaunchArguments_OnClick"/>
        </Grid>
    </Grid>
    </ScrollViewer>
</Window>
